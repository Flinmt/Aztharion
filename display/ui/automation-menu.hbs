<form autocomplete="off" class="aztharion-config-form">
  <div class="config-category">
    <h2>World of Darkness</h2>
    <div class="subcategory">
      <div class="form-group">
        <label>{{localize 'AZTHARION.Settings.DisableAutomation'}}</label>
        <div class="form-fields">
          <input type="checkbox" data-id="disableAutomation" data-dtype="Boolean"{{#if disableAutomation}} checked{{/if}}>
        </div>
        <p class="notes">{{localize 'AZTHARION.Settings.DisableAutomationHint'}}</p>
      </div>
    </div>

    {{#unless disableAutomation}}
      <div class="subcategory">
        <div class="form-group">
          <label>{{localize 'AZTHARION.Settings.AutomateWillpower'}}</label>
          <div class="form-fields">
            <input type="checkbox" data-id="automatedWillpower" data-dtype="Boolean"{{#if automatedWillpower}} checked{{/if}}>
          </div>
          <p class="notes">{{localize 'AZTHARION.Settings.AutomateWillpowerHint'}}</p>
        </div>
      </div>

      <h2>Vampire the Masquerade</h2>
      <div class="subcategory">
        <div class="form-group">
          <label>{{localize 'AZTHARION.Settings.AutomateHunger'}}</label>
          <div class="form-fields">
            <input type="checkbox" data-id="automatedHunger" data-dtype="Boolean"{{#if automatedHunger}} checked{{/if}}>
          </div>
          <p class="notes">{{localize 'AZTHARION.Settings.AutomateHungerHint'}}</p>
        </div>
      </div>

      <div class="form-group">
        <label>{{localize 'AZTHARION.Settings.AutomateOblivion'}}</label>
        <div class="form-fields">
          <input type="checkbox" data-id="automatedOblivion" data-dtype="Boolean"{{#if automatedOblivion}} checked{{/if}}>
        </div>
        <p class="notes">{{localize 'AZTHARION.Settings.AutomateOblivionHint'}}</p>
      </div>

      <h2>Werewolf the Apocalypse</h2>
      <div class="subcategory">
        <div class="form-group">
          <label>{{localize 'AZTHARION.Settings.AutomateRage'}}</label>
          <div class="form-fields">
            <input type="checkbox" data-id="automatedRage" data-dtype="Boolean"{{#if automatedRage}} checked{{/if}}>
          </div>
          <p class="notes">{{localize 'AZTHARION.Settings.AutomateRageHint'}}</p>
        </div>
      </div>
    {{/unless}}
  </div>
</form>
