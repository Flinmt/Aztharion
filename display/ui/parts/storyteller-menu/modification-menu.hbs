<div class="tab" data-group="primary" data-tab="modifications">
  <div class="config-category">
    <h2>{{localize 'AZTHARION.Settings.ModifiedAttributes'}}</h2>
    <div class="subcategory">
      <p class="notes">{{localize 'AZTHARION.Settings.ModifiedAttributesHint'}}</p>
      <div class="grid grid-3col">
        <div class="mod-header">{{localize 'AZTHARION.AttributesList.Label'}}</div>
        <div class="mod-header">{{localize 'AZTHARION.Settings.Rename'}}</div>
        <div class="mod-header">{{localize 'AZTHARION.Settings.Hidden'}}</div>
      </div>
      {{#each attributeModifications as |attribute id|}}
        <div class="modification-row grid grid-3col" data-type="attribute" data-id="{{attribute.id}}" data-label="{{attribute.label}}">
          <div class="mod-label">
            <i class="fas fa-trash remove-mod-button" data-type="attribute" data-id="{{attribute.id}}"></i>
            {{attribute.label}}
          </div>
          <input type="text" class="mod-rename" placeholder="{{attribute.label}}" value="{{attribute.rename}}">
          <input type="checkbox" class="mod-hidden"{{#if attribute.hidden}} checked{{/if}}/>
        </div>
      {{/each}}
      <div class="mod-footer">
        <hr>
        <div class="add-mod-button addition-button" data-type="attribute">{{localize 'AZTHARION.Settings.AddAttributeModification'}}</div>
      </div>
    </div>
  </div>

