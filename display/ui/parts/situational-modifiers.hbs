<div class="flex-group-center situational-modifiers">
  {{#if situationalModifiers}}
    <h3 class="list-title">{{localize 'AZTHARION.RollList.SelectableModifiers'}}</h3>
    <div class="form-group mod-header">
      <div>{{localize 'AZTHARION.RollList.Source'}}</div>
      <div>{{localize 'AZTHARION.Value'}}</div>
      <div>{{localize 'AZTHARION.Modifier.Active'}}</div>
    </div>
    {{#each situationalModifiers as |mod key|}}
      <div class="form-group modifier">
        <div class="mod-label">{{localize mod.source}}</div>
        <div class="mod-value">{{mod.value}}</div>
        <div class="mod-active">
          <input type="checkbox" class="mod-checkbox" data-value="{{mod.value}}" data-label="{{localize mod.source}}"
            data-advanced-check-dice="{{mod.advancedCheckDice}}" data-apply-dice-to="{{mod.applyDiceTo}}" {{#if mod.isActive}}checked{{/if}}>
        </div>
      </div>
    {{/each}}
  {{/if}}
  <h3 class="list-title">{{localize 'AZTHARION.RollList.CustomModifiers'}}</h3>
  <div class="form-group mod-header">
    <div>{{localize 'AZTHARION.RollList.Source'}}</div>
    <div>{{localize 'AZTHARION.Value'}}</div>
  </div>
  <div class="form-group custom-modifiers">
    <div id="custom-modifiers-list"></div>
  </div>
  <a class="add-custom-mod" data-action="addCustomMod">{{localize 'AZTHARION.RollList.AddCustomModifier'}}</a>
</div>
