<div class="modifier">
    <div class="field-header big-header"><input id="modifierSource" name="modifierSource" type="text" value="{{bonus.source}}" placeholder="{{localize 'AZTHARION.Modifier.NewModifier'}}"/></div>
    <div class="grid grid-3col flex-center">
        <div class="flexcol">
            <b>{{localize "AZTHARION.Value"}}</b>
            <input class="input-value" id="modifierValue" name="modifierValue" type="number" value="{{bonus.value}}"/>
        </div>
        <div>
            <b>{{localize "AZTHARION.Modifier.Unless"}}</b>
            <input id="unless" name="unless" type="text" value="{{bonus.unless}}" placeholder="{{localize 'AZTHARION.Modifier.Unless'}}"/>
        </div>
        <div>
            <input id="displayModifierWhenInactive" name="displayModifierWhenInactive" type="checkbox"{{#if bonus.displayWhenInactive}} checked{{/if}}/>
            <label for="displayModifierWhenInactive">{{localize "AZTHARION.Modifier.DisplayWhenInactive"}}</label>
        </div>
    </div>
    <div class="grid grid-3col flex-center">
        <div class="flexcol">
            <b>{{localize "AZTHARION.Modifier.ActiveWhen"}}</b>
            <select id="activeWhenCheck" name="activeWhenCheck">
                <option value="never"{{#ifeq bonus.activeWhen.check "never"}} selected{{/ifeq}}>{{localize "AZTHARION.Modifier.Never"}}</option>
                <option value="always"{{#ifeq bonus.activeWhen.check "always"}} selected{{/ifeq}}>{{localize "AZTHARION.Modifier.Always"}}</option>
                <option value="isEqual"{{#ifeq bonus.activeWhen.check "isEqual"}} selected{{/ifeq}}>{{localize "AZTHARION.Modifier.IfEquals"}}</option>
                <option value="isPath"{{#ifeq bonus.activeWhen.check "isPath"}} selected{{/ifeq}}>{{localize "AZTHARION.Modifier.IfPathIs"}}</option>
            </select>
        </div>
        <div class="active-when-path">
            <b>{{localize "AZTHARION.Modifier.PathToCheck"}}</b>
            <input id="activeWhenPath" name="activeWhenPath" type="text" value="{{bonus.activeWhen.path}}" placeholder="{{localize 'AZTHARION.Modifier.PathToCheck'}}"/>
        </div>
        <div class="active-when-value">
            <b>{{localize "AZTHARION.Modifier.ValueToCheck"}}</b>
            <input id="activeWhenValue" name="activeWhenValue" type="text" value="{{bonus.activeWhen.value}}" placeholder="{{localize 'AZTHARION.Modifier.ValueToCheck'}}"/>
        </div>
    </div>
    <div class="flexcol">
        <b>{{localize "AZTHARION.Modifier.Selectors"}}</b>
        <input id="modifier" name="modifier" list="modifier-selectors" class="modifier-selectors" type="text" value="{{splitArray bonus.paths}}" placeholder="{{localize 'AZTHARION.None'}}"/>
        <datalist id="modifier-selectors">
          {{selectOptions modifierSelectors selected=value valueAttr="id" labelAttr="displayName" }}
        </datalist>
    </div>
</div>
