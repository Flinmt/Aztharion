<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
    <div class="modifiers-list">
        {{#each bonuses as |bonus key|}}
            <div class="modifier" style="margin-top: 5px;">
                <h3>
                    <a class="edit-bonus" title="Edit bonus" data-action="editModifier" data-bonus-path="skills.{{../id}}.bonuses" data-bonus="{{key}}" style="margin-right: 5px; margin-top: 5px; font-size: 13pt;">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{bonus.source}}
                    <a class="delete-bonus" title="Delete bonus" data-action="deleteModifier" data-bonus-path="skills.{{../id}}.bonuses" data-bonus="{{key}}" style="float: right;">
                        <i class="fas fa-trash"></i>
                    </a>
                </h3>
                <div class="grid grid-3col flex-center">
                    <div class="flexcol flex-center">
                        <b>{{localize "AZTHARION.Value"}}</b>
                        <input name="value" type="number" value="{{bonus.value}}" disabled="true"/>
                    </div>
                    <div>
                        <b>{{localize "AZTHARION.Modifier.Unless"}}</b>
                        <input name="path" type="text" value="{{bonus.unless}}" placeholder="{{localize 'AZTHARION.Modifier.Unless'}}" disabled="true"/>
                    </div>
                    <div class="flexcol flex-center">
                        <b>{{localize "AZTHARION.Modifier.DisplayWhenInactive"}}</b>
                        <input name="displayWhenInactive" type="checkbox"{{#if bonus.displayWhenInactive}} checked{{/if}} disabled="true"/>
                    </div>
                </div>
                <div class="grid grid-3col flex-center">
                    <div class="flexcol">
                        <b>{{localize "AZTHARION.Modifier.ActiveWhen"}}</b>
                        <select name="check" type="number">
                            <option value="never"{{#ifeq bonus.activeWhen.check "never"}} selected{{/ifeq}} disabled="true">{{localize 'AZTHARION.Modifier.Never'}}</option>
                            <option value="always"{{#ifeq bonus.activeWhen.check "always"}} selected{{/ifeq}} disabled="true">{{localize 'AZTHARION.Modifier.Always'}}</option>
                            <option value="isEqual"{{#ifeq bonus.activeWhen.check "isEqual"}} selected{{/ifeq}} disabled="true">{{localize 'AZTHARION.Modifier.IfEquals'}}</option>
                            <option value="isPath"{{#ifeq bonus.activeWhen.check "isPath"}} selected{{/ifeq}} disabled="true">{{localize 'AZTHARION.Modifier.IfPathIs'}}</option>
                        </select>
                    </div>
                    {{#ifeq bonus.activeWhen.check 'isEqual'}}
                        <div>
                            <b>{{localize "AZTHARION.Modifier.PathToCheck"}}</b>
                            <input name="path" type="text" value="{{bonus.activeWhen.path}}" placeholder="{{localize 'AZTHARION.Modifier.PathToCheck'}}" disabled="true"/>
                        </div>
                        <div>
                            <b>{{localize "AZTHARION.Modifier.ValueToCheck"}}</b>
                            <input name="value" type="text" value="{{bonus.activeWhen.value}}" placeholder="{{localize 'AZTHARION.Modifier.ValueToCheck'}}" disabled="true"/>
                        </div>
                    {{else if (eq bonus.activeWhen.check "isPath")}}
                        <div>
                            <b>{{localize "AZTHARION.Modifier.PathToCheck"}}</b>
                            <input name="path" type="text" value="{{bonus.activeWhen.path}}" placeholder="{{localize 'AZTHARION.Modifier.PathToCheck'}}" disabled="true"/>
                        </div>
                    {{/ifeq}}
                </div>
                <div class="flexcol">
                    <b>{{localize "AZTHARION.Modifier.Selectors"}}</b>
                    <input class="modifier-selectors" name="paths" type="text" value="{{splitArray bonus.paths}}" placeholder="{{localize 'AZTHARION.None'}}" disabled="true"/>
                </div>
            </div>
        {{/each}}
    </div>
    <hr>
    <div class="flex-center">
        <b>
            <a class="add-bonus" data-action="addModifier" data-skill="{{id}}" data-bonus-path="skills.{{id}}.bonuses">{{localize "AZTHARION.Modifier.AddNewModifier"}}</a>
        </b>
    </div>
</section>
