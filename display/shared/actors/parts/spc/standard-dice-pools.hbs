<div>
    <div class="resource-label field-header flex-center">
        {{localize "AZTHARION.SPC.StandardDicePools"}}
    </div>
    <div class="standard-pools-list grid grid-3col flex-group-center">
        <!-- Physical Dicepool -->
        <div class="resource-content flexcol flex-center flex-between">
            <label for="Physical" class="resource-label rollable" data-action="roll" data-use-absolute-value="true"
                data-absolute-value="{{standardPools.physical.value}}" data-label="{{localize 'AZTHARION.SPC.Physical'}}"
                {{#if noAdvancedDice}} data-disable-advanced-dice="true"{{/if}} data-selectors="physical">
                {{localize 'AZTHARION.SPC.Physical'}}
                <i class="fa-solid fa-dice-d10"></i>
            </label>
            {{#if locked}}
                <div class="resource stat-resource-background">
                    {{standardPools.physical.value}}
                </div>
            {{else}}
                <input type="number" name="system.standarddicepools.physical.value" value="{{standardPools.physical.value}}" data-dtype="Number"/>
            {{/if}}
        </div>

        <!-- Social Dicepool -->
        <div class="resource-content flexcol flex-center flex-between">
            <label for="Social" class="resource-label rollable" data-action="roll" data-use-absolute-value="true"
                data-absolute-value="{{standardPools.social.value}}" data-label="{{localize 'AZTHARION.SPC.Social'}}"
                {{#if noAdvancedDice}} data-disable-advanced-dice="true"{{/if}} data-selectors="social">
                {{localize 'AZTHARION.SPC.Social'}}
                <i class="fa-solid fa-dice-d10"></i>
            </label>
            {{#if locked}}
                <div class="resource stat-resource-background">
                    {{standardPools.social.value}}
                </div>
            {{else}}
                <input type="number" name="system.standarddicepools.social.value" value="{{standardPools.social.value}}" data-dtype="Number"/>
            {{/if}}
        </div>

        <!-- Mental Dicepool -->
        <div class="resource-content flexcol flex-center flex-between">
            <label for="Mental" class="resource-label rollable" data-action="roll" data-use-absolute-value="true"
                data-absolute-value="{{standardPools.mental.value}}" data-label="{{localize 'AZTHARION.SPC.Mental'}}"
                {{#if noAdvancedDice}} data-disable-advanced-dice="true"{{/if}} data-selectors="mental">
                {{localize 'AZTHARION.SPC.Mental'}}
                <i class="fa-solid fa-dice-d10"></i>
            </label>
            {{#if locked}}
                <div class="resource stat-resource-background">
                    {{standardPools.mental.value}}
                </div>
            {{else}}
                <input type="number" name="system.standarddicepools.mental.value" value="{{standardPools.mental.value}}" data-dtype="Number"/>
            {{/if}}
        </div>
    </div>
</div>
