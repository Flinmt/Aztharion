<header class="item-header">
    <img class="profile-img" data-action="editImage" src="{{img}}" data-edit="img" title="{{name}}" alt="Item Image" />
    <div class="header-fields">
        <input class="itemname" name="name" type="text" value="{{name}}" placeholder="{{localize 'AZTHARION.Name'}}"/>
        <div class="flexrow flex-center header-details">
            <!-- Select the edge this perk belongs to -->
            <label>
                <b>{{localize "AZTHARION.HTR.EdgeType"}}</b>
            </label>
            <select name="system.edge" data-type="String">
                {{selectOptions edgeOptions selected=selectedEdge localize=true}}
            </select>
        </div>
    </div>
</header>
